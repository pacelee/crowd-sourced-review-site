{{#if thisButton}}
<div>
  <form>
    <div class='form-group'>
    <label for="location">Location</label>
    {{input value=location id='location'}}
    </div>
    <div class='form-group'>
    <label for="type">Type</label>
    {{input value=type id='type'}}
    </div>
    <div class='form-group'>
    <label for="image">Image URL</label>
    {{input value=image id='image'}}
    </div>
  </form>
</div>
<button class="btn btn-primary" {{action 'addPlace' question}}> Save </button>
{{else}}
<button class="btn btn-primary" {{action 'thisButton'}}> Add a Place </button>
{{/if}}
